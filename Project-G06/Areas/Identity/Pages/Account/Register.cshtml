@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h1>@ViewData["Title"]</h1>*@
<br />
@*<div class="row">*@
    <body class="ab">
        <br />
    <div class="login-boxs">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2>Create a new account</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="user-boxs ">
                  <br />
                <input asp-for="Input.Email" autocomplete="username" aria-required="true" /> 
            <label asp-for="Input.Email"></label>
          
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
            <div class="user-boxs">
            <input asp-for="Input.Password"  autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
            <div class="user-boxs">
            <input asp-for="Input.ConfirmPassword"  autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.ConfirmPassword"></label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

            @* <div class="form-floating">
            <select asp-for="Input.Role" class="form-control" asp-items="@Model.Input.RoleList" aria-required="true">
                <option disabled selected>
                    select Role
                </option>
            </select>
            <span asp-validation-for="Input.Role" class="text-danger"></span>

            </div>*@
            <div class="user-boxs" hidden>
                <input asp-for="Input.Role" class="form-control" value="University Admin" aria-required="true">
                  <label asp-for="Input.Role"></label>

                <span asp-validation-for="Input.Role" class="text-danger"></span>

            </div>
            <br />

            <button id="registerSubmit" type="submit" class="buttons">Register</button>
    </form>
</div>
<br />
<br />
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
