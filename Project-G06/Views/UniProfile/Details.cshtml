@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>

<div>
    <h4>UniProfileModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UniShortname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UniShortname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UniFullname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UniFullname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UniDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UniDetails)
        </dd>
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.ProfilPic_URL)
        </dt>
        @*<dd class = "col-sm-10">
        @Html.DisplayFor(model => model.ProfilPic_URL)
        </dd>*@
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.WebApplication2User)
        </dt>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.WebApplication2User.Id)
        </dd>
    </dl>

    <div class="col-4 row">
        <input type="hidden" asp-for="ProfilPic_URL" id="ProfilPic_URL" />
        <div class="form-group col-12 justify-content-around align-middle mb-0 pb-0">
            <img id="PreviewPhoto" src="~/profilepics/@Model?.ProfilPic_URL" alt="Logo Image" width=" 200" height="200"
                 style="border:1px;margin-top:10px;" />
        </div>
        <div class="form-group col-2 pt-0 mt-0">
        </div>
        <div class="form-group col-10 pt-0 mt-0">
        </div>

    </div>
</div>


<a asp-action="UniProfile">Back to University List</a>
<div class="col-5 form-group text-left p-2">
    <a class="btn btn-primary" asp-action="Degree" asp-route-id="@Model?.UserId">Degree</a>
</div>
