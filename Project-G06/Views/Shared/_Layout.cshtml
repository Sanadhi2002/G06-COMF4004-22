<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project_G06</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout-cshtml.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project_G06.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
    
        <div class="Mynavbar">
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
           <!-- <a asp-area="" asp-controller="WebAdmins" asp-action="Index">WebAdmin</a>-->
            <a asp-area="" asp-controller="Home" asp-action="compare">Compare</a>
            <a asp-area="" asp-controller="UnivDashController1" asp-action="UnivDashBoard">Uni dash</a>

            <a asp-area="" asp-controller="Home" asp-action="UnivProfile">University Profile</a>
            <a asp-area="" asp-controller="Home" asp-action="aboutUs">About Us</a>
            <a asp-area="" asp-controller="Universities" asp-action="AddNew">Registration for universities</a>
            <a asp-area="" asp-controller="Universities" asp-action="Index">View Registered Universities</a>
            <a asp-area="" asp-controller="Faculties" asp-action="AddFaculty">Add Faculties</a>
            <a asp-area="" asp-controller="Faculties" asp-action="FacultyIndex">View Faculties</a>

            <div class="Mynavbar_dropdown">
                <button class="Mynavbar_dropbtn">
                    <a href="#">Register</a>
                    <!--<i class="fa fa-caret-down"></i>-->
                </button>
                <div class="Mynavbar_dropdown-content">
                    <a asp-area="" asp-controller="Universities" asp-action="AddNew">Register your university</a>
                    <a asp-area="" asp-controller="StudentEmail" asp-action="Add">Register your email</a>
                    <a asp-area="" asp-controller="WebsiteAdmin" asp-action="WebsiteAdminRegistration">WebAdmin Registration</a>
                </div>
            </div>
            <div class="Mynavbar_dropdown">
                <button class="Mynavbar_dropbtn">
                    <a href="#">Login</a>
                    <!--<i class="fa fa-caret-down"></i>-->
                </button>
                <div class="Mynavbar_dropdown-content">

                    <a asp-area="" asp-controller="Home" asp-action="LOGINSUPERADMIN">LOGIN for super admin</a>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </div>
    </header>
 
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Project_G06 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
