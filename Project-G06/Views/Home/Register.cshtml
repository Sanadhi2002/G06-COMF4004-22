@model Register
<h3>Register your email</h3>
<form method="post" asp-controller="Home" asp-action="Register">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input id="name" class="form-control" name="studentName" asp-for="Name" /><br />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input id="email" class="form-control" name="studentEmail" asp-for="Email" /><br />
    </div>

    <div>
        <input type="checkbox" id="conditions" name="conditions" value="conditions">
        <label for="conditions"> I want to recieve notifications through my email</label><br>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>
