@model IEnumerable<DegreeModel>




<div class="container btn-group">
    <div class="col-10">
        <br />

        <h1>Degrees</h1>
    </div>
    <div class="col-2 btn-group justify-content-end p-3">
        <a asp-action="DegreeCreate" class="buttons1">Add New Degree</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>

            <th>
            </th>

            <th>
                Degree ID
            </th>
            <th>
                Degree Name
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>

                <td>
                    @*<img src="@item.PhotoUrl" alt="" class="avatar">*@
                </td>

                <td>
                    @obj.Degree_ID
                </td>
                <td>
                    @obj.Degre_Name
                </td>



                <td>
                    @*   <a asp-action="Edit" asp-route-id="@obj.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@obj.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@obj.ID">Delete</a>*@

                     <div class="btn-group">
                <a asp-action="DegreeEdit" asp-route-id="@obj.Degree_ID" class="btn btn-sm btn-info">Edit</a>

                        &nbsp;  &nbsp;  &nbsp;
                        <a asp-action="DetailsDegree" asp-route-id="@obj.Degree_ID" class="btn btn-sm btn-primary ml-1">Details</a>

                        &nbsp;  &nbsp;  &nbsp;
                <a asp-action="DegreeDelete" asp-route-id="@obj.Degree_ID" class="btn btn-sm btn-danger ml-1">Delete</a>
                </div>

                </td>
            </tr>
        }
    </tbody>
</table>
