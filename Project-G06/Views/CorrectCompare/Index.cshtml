else
{

    <div class="grid-container">
        @foreach (var obj in Model)
        {
            <div class="column">
                <h2>@obj.Degree_Type @obj.Degre_Name - @obj.UniShortname</h2>
                <p>Duration : @obj.Degree_duration</p>
                <p>Type : @obj.Degree_Type</p>
                <p>
                    Course Fee
                    : @obj.CourseFee
                </p>
                <p>Affiliated University : @obj.Affiliated_uni</p>
                <p>Description : @obj.Degree_description</p>
                <p>Degree Content : @obj.DegreeContents</p>
                <p>Admission requirements : @obj.Admission_Requirments</p>

                <p>Career Oppurtunities : @obj.Career_Opurtunity</p>
                <p>Academic Proggression : @obj.Academic_proggression</p>
            </div>





